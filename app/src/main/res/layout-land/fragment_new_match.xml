<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NewMatchFragment"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Partido"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#000"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Equipo Local"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="15dp"/>

            <EditText
                android:id="@+id/et_homeTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Equipo A"
                android:background="#fff"
                android:textSize="20sp"
                android:padding="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Equipo Visitante"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="15dp"/>

            <EditText
                android:id="@+id/et_guestTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Equipo B"
                android:background="#fff"
                android:textSize="20sp"
                android:padding="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_createNewMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_margin="15dp"
        android:text="Crear"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"/>


</LinearLayout>